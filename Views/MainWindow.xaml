
<Window
    x:Class="BatchTextProcessor.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:BatchTextProcessor.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:BatchTextProcessor.Behaviors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:BatchTextProcessor.Views"
    xmlns:vm="clr-namespace:BatchTextProcessor.ViewModels"
    Title="文本批量处理工具"
    Width="1080"
    Height="720"
    SizeToContent="Manual"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>
    <TabControl>
        <TabItem Header="文本合并">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel
                    Grid.Row="0"
                    Margin="10"
                    Orientation="Horizontal">
                    <Button
                        Width="120"
                        Command="{Binding AddFilesCommand}"
                        Content="添加文件"
                        Style="{StaticResource ButtonPrimary}" />
                    <Button
                        Width="120"
                        Margin="10,0"
                        Command="{Binding AddFoldersCommand}"
                        Content="添加文件夹" />
                    <Button
                        Width="120"
                        Margin="10,0"
                        Command="{Binding RemoveSelectedCommand}"
                        Content="删除选中" />
                    <Button
                        Width="120"
                        Margin="10,0"
                        Command="{Binding ClearListCommand}"
                        Content="清空列表" />
                    <Button
                        Width="120"
                        Margin="10,0"
                        Command="{Binding RefreshMergeNamesCommand}"
                        Content="刷新合并名称" />
                </StackPanel>

                <Border
                    Grid.Row="1"
                    Margin="10,5"
                    Padding="10"
                    Background="{DynamicResource RegionBrush}"
                    CornerRadius="5">
                    <StackPanel Orientation="Horizontal">
                        <Label
                            Margin="0,0,5,0"
                            VerticalAlignment="Center"
                            Content="最小匹配字符:" />
                        <TextBox
                            Width="60"
                            Margin="0,0,15,0"
                            Text="{Binding MinMatchChars, UpdateSourceTrigger=PropertyChanged}">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Enter" Command="{Binding RefreshMergeNamesCommand}" />
                            </TextBox.InputBindings>
                        </TextBox>

                        <Label
                            Margin="0,0,5,0"
                            VerticalAlignment="Center"
                            Content="最大匹配字符:" />
                        <TextBox Width="60" Text="{Binding MaxMatchChars, UpdateSourceTrigger=PropertyChanged}">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Enter" Command="{Binding RefreshMergeNamesCommand}" />
                            </TextBox.InputBindings>
                        </TextBox>
                    </StackPanel>
                </Border>

                <DataGrid
                    Grid.Row="2"
                    Margin="10"
                    AllowDrop="True"
                    AutoGenerateColumns="False"
                    CanUserReorderColumns="False"
                    CanUserSortColumns="False"
                    ItemsSource="{Binding FileItems}">
                    <i:Interaction.Behaviors>
                        <local:DataGridDragDropBehavior />
                    </i:Interaction.Behaviors>
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Binding="{Binding Index}"
                            Header="序号"
                            IsReadOnly="True" />
                        <DataGridCheckBoxColumn
                            Binding="{Binding IsSelectedForDeletion}"
                            Header="选择"
                            Width="Auto" />
                        <DataGridTextColumn
                            Binding="{Binding FileName}"
                            Header="文件名"
                            IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="ToolTip" Value="{Binding FullPath}" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridCheckBoxColumn Binding="{Binding ShouldExport}" Header="导出" />
                        <DataGridTextColumn Binding="{Binding MergedName}" Header="合并名称" />
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel
                    Grid.Row="3"
                    Margin="10"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <Button
                        Width="120"
                        Height="30"
                        Margin="0,0,10,0"
                        Command="{Binding ShowPreviewWindowCommand}"
                        Content="导出预览"
                        Style="{StaticResource ButtonPrimary}" />
                    <Button
                        Width="120"
                        Height="30"
                        Command="{Binding ExportFilesCommand}"
                        Content="执行导出"
                        IsEnabled="{Binding CanExport, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource ButtonPrimary}" />
                </StackPanel>
            </Grid>
        </TabItem>
        <TabItem Header="文本拆分">
            <views:SplitFileView DataContext="{Binding SplitFileViewModel}" />
        </TabItem>
    </TabControl>
</Window>
